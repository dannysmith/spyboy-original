<% @page_title = "Login" -%>
<h1>Login to Admin Area</h1>
<%= error_messages_for 'user' %>
<% form_tag do %>
    <div class="form">
        <p>User Name</p>
		<p><%= text_field("user", "name") %></p>
        <p>Password</p>
		<p><%= password_field("user", "password") %></p>
        <input type="submit" value=" Log In " />
    </div>
<% end %>
