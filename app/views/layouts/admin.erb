<html>
    <head>
        <title>SpyBoy Admin: <%= controller.action_name %></title>
        <script type="text/javascript"></script>
        <%= stylesheet_link_tag 'scaffold', :media => "all" %>
		<%= stylesheet_link_tag "spyboy-old", :media => "all" %>
    </head>
    <body>
        <div id="container">
	        <div id="header">
	            <h1><span><%= @page_title || "SpyBoy.com" %></span></h1>
				<h2>Administration Area</h2>
	        </div>
	        <div id = "columns">
	            <div id="sidebar">
	               <% if session[:user_id] -%>
		               <div class="sidebar-block">
		                   <h3><span>admin</span>functions</h3>
			               <div class="inner">
				                <li><%= link_to 'List Shows', :controller => 'admin', :action => 'list' %></li>
				                <li><%= link_to 'Add New Show', :controller => 'admin', :action => 'new' %></li>
								<li><%= link_to 'Manage Links', :controller => 'linker', :action => 'list_links' %></li>
				                <li><%= link_to 'Add New Link', :controller => 'linker', :action => 'add_link' %></li>
				                <li><%= link_to 'Manage Subscribers', :controller => 'subscribers', :action => 'list_subscribers' %></li>
				                <li><%= link_to 'Manage Administrators', :controller => 'login', :action => 'list' %></li>
				                <li><%= link_to 'View your Site', :controller => 'list', :action => 'index' %></li>
				                <li><%= link_to 'Log Out', :controller => 'login', :action => 'logout' %></li>
			               </div>
		               </div>
	               <% end -%>
               </div>
	            <div id="main">
	               <%= "<p class='flasher'> #{flash[:notice]}</p>" if flash[:notice] %>
	                <%= @content_for_layout %>
	            </div>
	        </div>
        </div>
    </body>
</html>