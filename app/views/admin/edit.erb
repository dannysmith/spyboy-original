<h1>Edit your Show</h1>

<% form_for :gig, :url => { :action => 'update', :id => @gig } do |f| %>
  
<%= error_messages_for 'gig' %>
<div id="gig-form">
<!--[form:gig]-->
<p id="gig-title"><label for="gig_title">Artist/Title</label>
<%= f.text_field :title  %></p>

<p id="gig-image-url"><label for="gig_image_url">Path to Picture</label>
<%= f.text_field :image_url  %></p>

<p id="gig-image2-url"><label for="gig_image2_url">Path to Second Picture</label>
<%= f.text_field :image2_url  %></p>

<p id="gig-price"><label for="gig_price">Price</label>
<%= f.text_field :price  %></p>

<p id="gig-venue"><label for="gig_venue">Venue</label>
<%= f.text_field :venue  %></p>

<p id="gig-date"><label for="gig_date">Date</label>
<%= f.date_select (:date, :order => [:day, :month, :year],
:start_year => Date.today.year, :end_year => Date.today.year+15)%></p>

<p id="gig-time"><label for="gig_time">Time of gig</label>
<%= f.text_field :time  %></p>

<p id = "gig-description"><label for="gig_description">Description</label><br />
<%= f.text_area:description  %></p>

  <%= submit_tag "Save this Show" %>
<% end %>

<%= link_to 'Back', :action => 'list' %>
